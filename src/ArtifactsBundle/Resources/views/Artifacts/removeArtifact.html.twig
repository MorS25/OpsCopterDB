{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ user.username }}</h1>
    {% if (form is defined) %}
        <h3>Are you sure you want to delete this user?</h3>
        <form action="{{ url('delete_user', {user: user.id}) }}" method="POST" {{ form_enctype(form) }}>
            <input type="hidden" name="_method" value="delete" />
            {{ form_widget(form) }}
        </form>
    {% endif %}
{% endblock %}






